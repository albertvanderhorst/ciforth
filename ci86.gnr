_C{        MOV     AH,0x10}
_C{        INT     0x16}
        POP    WOR
        POP    RPO
        POP    HIP
        _SWITCH_({JMPHERE_FROM_OS})
        RET
_C
})_C{}_END_({_NEWDEBUG_ })
})_C{}_END_({_PC_ })
