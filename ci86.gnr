        MOV     AH,0    _C{MAKE 16 BITS}
        _PUSH   _C{SAVE KEY VALUE}
CI      PROC    NEAR
        MOV     AH,0    _C{ READ CHAR FUNCTION}
        INT     0x16
        RET
_ENDP CI      ENDP
_C
worddoc( {INPUT},{KEY?},{key_question},{--- ff},{ISO},
